<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_study_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구름톤 UNIV 스터디"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/main_first_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1주차 - SharedPreference"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_study_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/main_second_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1주차 - WebView"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_first_study"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/main_third_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2주차 - Camera"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_second_study"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>